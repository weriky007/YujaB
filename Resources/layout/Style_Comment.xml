<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainComment"
    android:layout_height="wrap_content">
    <refractored.controls.CircleImageView
        android:id="@+id/card_pro_pic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:civ_border_width="1dp"
		android:src="@drawable/no_profile_image_circle"
        app:civ_border_color="@color/gnt_white" />
    <LinearLayout 
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:minWidth="220dp"
		android:background="@drawable/comment_rounded_left_layout"
        android:layout_toEndOf="@+id/card_pro_pic" 
        android:id="@+id/bubble_layout"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"> 
        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawablePadding="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content" />
        <PlayTube.Library.Anjo.SuperTextLibrary.SuperTextView
            android:id="@+id/active"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:textSize="13dp"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false" /> 
    </LinearLayout> 
    <LinearLayout
        android:id="@+id/actionlayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/bubble_layout"
        android:layout_toEndOf="@+id/card_pro_pic"
        android:gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/LikeButton">
            <ImageView
                android:id="@+id/Likeicon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/icon_likefilled_video_vector"
                android:tint="#777777"
                android:layout_gravity="center"
                android:gravity="center" />
            <TextView
                android:id="@+id/LikeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textColor="?attr/colorSecondaryExtra"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/UnLikeButton">
            <ImageView
                android:id="@+id/UnLikeicon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_likefilled_video_vector"
                android:tint="#777777"
                android:rotation="180"
                android:layout_gravity="center"
                android:gravity="center" />
            <TextView
                android:id="@+id/UnLikeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="?attr/colorSecondaryExtra"
                android:text="0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/ReplyButton">
          <ImageView
            android:id="@+id/ReplyIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_reply_vector"
            android:tint="#777777"
            android:layout_gravity="center"
            android:gravity="center" />
          <TextView
            android:id="@+id/RepliesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="?attr/colorSecondaryExtra"
            android:text="0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" /> 
        </LinearLayout>
      <TextView
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:translationX="7dp"
        android:textSize="13dp" 
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content" />
    </LinearLayout>
</RelativeLayout> 