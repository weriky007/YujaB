<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainliner_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/colorPrimary"
    android:layout_margin="3dp"
    android:orientation="vertical"> 
    <RelativeLayout
        android:id="@+id/Image_container"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_gravity="fill"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/textIcon"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/Imagevideo"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:focusable="false"
                android:src="@drawable/imageplacholder"
                android:clickable="false"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/videoType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/textIcon"
            android:textSize="12dp"
            android:visibility="invisible"
            android:textStyle="normal"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:focusable="false"
            android:clickable="false" 
            android:background="@drawable/ThirdpartyRoundText"
            android:backgroundTint="#6441A4" />
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/textIcon"
            android:textSize="12dp"
            android:textStyle="normal"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:clickable="false"
            android:translationY="-3dp"
            android:background="@xml/rounded_corner"
            android:layout_alignBottom="@id/cardview2" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="7dp"
        android:focusable="false"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14dp"
            android:clickable="false"
            android:focusable="false"
            android:typeface="normal"
            android:gravity="start" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:lines="1"
                android:textColor="@color/accent"
                android:textSize="11dp"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:clickable="false" />
            <TextView
                android:id="@+id/IconVerified" 
                android:layout_height="wrap_content"
                android:textColor="@color/accent"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/Views_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:lines="1"
            android:textColor="?attr/colorSecondaryExtra"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:clickable="false"
            android:gravity="start"
            android:layout_gravity="start" />
    </LinearLayout>
</LinearLayout>