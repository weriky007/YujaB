<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/mainliner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_gravity="fill"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/textIcon"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            app:cardElevation="0dp">
            <RelativeLayout
                android:id="@+id/Image_container"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/Imagevideo"
                    android:layout_width="140dp"
                    android:layout_height="85dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp" />
                <LinearLayout
                    android:id="@+id/Balckliner_container"
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@xml/framealfacolor"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp">
                    <TextView
                        android:id="@+id/NumberPlaylist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/textIcon"
                        android:textSize="15dp"
                        android:textStyle="normal" 
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="9dp" />
                    <TextView
                        android:id="@+id/PlaylistIcon" 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/textIcon"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_weight="2" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:focusable="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3">
            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="4dp"
                android:textSize="14dp"
                android:textStyle="normal"
                android:clickable="false"
                android:focusable="false" />
            <TextView
                android:id="@+id/Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:lines="1"
                android:textColor="?attr/colorSecondaryExtra"
                android:textSize="14dp"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/Views_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:lines="1"
                android:textColor="?attr/colorSecondaryExtra"
                android:textSize="14dp"
                android:layout_marginTop="7dp"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/videoMenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:lines="1"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="?attr/colorSecondaryExtra"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:text=":"
        android:layout_gravity="end"
        android:layout_weight="9"
        android:focusable="auto"
        android:clickable="true"
        android:gravity="center_vertical"
        android:enabled="true" />
</RelativeLayout>