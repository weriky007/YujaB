<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mainAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/accent"
            android:background="@xml/framealfacolor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Collapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Expanded">
            <ImageView
                android:id="@+id/Imagevideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:background="@xml/gradientblack"
                android:focusable="false"
                android:layoutDirection="ltr">
                <!--Top-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/ChannelImage"
                        android:scaleType="centerCrop"
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_marginStart="0dp" />
                    <!--Channel Name & Verified-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ChannelName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp" 
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/textIcon" />
                        <TextView
                            android:id="@+id/ChannelVerifiedText" 
                            android:layout_height="wrap_content"
                            android:textColor="@color/accent"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="7dp" 
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="3dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/circlelayout"
                        android:id="@+id/subcribebuttons"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/SubcribeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:drawableStart="@drawable/SubcribeButton"
                            android:text="@string/Lbl_Subscribe"
                            android:background="@drawable/shape_radius_btn"
                            android:textStyle="normal"
                            android:textSize="13dp"
                            android:layout_marginTop="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="25dp"
                            android:backgroundTint="@color/accent"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawablePadding="7dp"
                            android:textColor="#efefef" />
                        <com.github.library.bubbleview.BubbleLinearLayout
                            android:orientation="vertical"
                            android:layout_toEndOf="@+id/SubcribeButton"
                            app:arrowWidth="7dp"
                            app:angle="17dp"
                            app:arrowHeight="10dp"
                            app:arrowPosition="15dp"
                            app:arrowLocation="left"
                            android:layout_marginStart="0dp"
                            app:bubbleColor="?attr/colorDivider"
                            app:arrowCenter="false"
                            android:id="@+id/bubble_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_height="match_parent"
                                android:id="@+id/subcriberscount"
                                android:textSize="10dp"
                                android:gravity="center"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="13dp"
                                android:layout_marginStart="19dp"
                                android:layout_marginBottom="6dp"
                                android:layout_width="wrap_content"
                                android:layout_weight="0"
                                android:text="0"
                                android:translationX="0dp"
                                android:paddingStart="7dp"
                                android:paddingEnd="7dp"
                                android:padding="0dp" />
                        </com.github.library.bubbleview.BubbleLinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/channeltabs"
                    app:tabMode="scrollable"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                android:background="#00000000"
                app:layout_collapseMode="pin">
                <ImageView
                    android:id="@+id/Messeges_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/textIcon"
                    android:src="@drawable/icon_message_vector"
                    android:layout_gravity="end|center"
                    android:gravity="end"
                    android:padding="5dp"
                    android:layout_weight="0.23"
                    android:layout_marginEnd="13dp" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/Channelviewpager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
