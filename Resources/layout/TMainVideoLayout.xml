<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/parent"
	android:background="?attr/colorPrimary"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/mainAppBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:fitsSystemWindows="true"
		android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
		android:longClickable="false"
		android:animationCache="true"
		android:duplicateParentState="true"
		android:filterTouchesWhenObscured="true">
		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_gravity="top"
			android:elevation="2dp"
			app:theme="@style/ToolbarTheme"
			app:titleTextAppearance="@style/Toolbar.TitleText"
			android:background="@drawable/linear_gradient_drawable">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<ImageView
					android:id="@+id/appName"
					android:src="@mipmap/icon"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:layout_gravity="start"
					android:gravity="start"
					android:padding="5dp"
					android:layout_width="45dp"
					android:layout_height="45dp" />
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/searchButton"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:background="?attr/selectableItemBackground"
						android:layout_marginEnd="10dp"
						android:padding="1dp"
						android:src="@drawable/icon_search_vector"
                        android:tint="?attr/colorSecondaryExtra"
						android:layout_gravity="end"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"  />
					<ImageView
						android:id="@+id/profileButton"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:background="?attr/selectableItemBackground"
						android:layout_marginEnd="10dp"
						android:padding="1dp"
						android:src="@drawable/no_profile_image_circle"
						android:layout_gravity="end"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"  />
					<ImageView
						android:id="@+id/settingsButton"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:background="?attr/selectableItemBackground"
						android:layout_marginEnd="10dp"
						android:padding="1dp"
						android:src="@drawable/icon_settings_vector"
                        android:tint="?attr/colorSecondaryExtra"
						android:layout_gravity="end"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"  />
				</LinearLayout>
			</RelativeLayout>
		</androidx.appcompat.widget.Toolbar>
	</com.google.android.material.appbar.AppBarLayout>

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/swipeRefreshLayout"
		android:layout_width="match_parent"
		android:layout_alignParentTop="true"
		android:layout_marginBottom="50dp"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:layout_height="wrap_content">
   
      <LinearLayout
			android:id="@+id/Main_videos_Linear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/colorPrimary"
			android:orientation="vertical"> 
			<include
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone"
				layout="@layout/ViewModel_Alert" />
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recyler"
				android:clickable="true"
				android:focusable="false"
				android:focusableInTouchMode="true"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scrollbars="vertical" />
		 
		</LinearLayout>
	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
	<ViewStub
		android:id="@+id/viewStub"
		android:inflatedId="@+id/subView"
		android:layout_marginTop="35dp"
		android:layout_centerInParent="true"
		android:layout_gravity="center"
		android:gravity="center"
		android:layout="@layout/EmptyStateLayout"
		android:layout_width="match_parent"
		android:layout_height="350dp" />
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/Loading_LinearLayout"
		android:layout_marginTop="20dp"
		android:layout_centerInParent="true"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_gravity="center">
		<ProgressBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/progressBar"
			android:layout_centerInParent="true"
			android:indeterminate="true"
			android:gravity="center"
			android:layout_gravity="center"
			android:progressTint="@color/textIcon" />
		<TextView
			android:id="@+id/Txt_Start_Loading"
			android:layout_width="wrap_content"
			android:textSize="15dp"
			android:textStyle="normal"
			android:layout_centerInParent="true"
			android:text="@string/Lbl_Loading_Videos"
			android:textColor="?attr/colorSecondaryExtra"
			android:layout_height="wrap_content"
			android:typeface="normal"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_marginTop="10dp" />
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
