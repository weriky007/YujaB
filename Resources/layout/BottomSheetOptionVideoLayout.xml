<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:layout_width="match_parent"
	android:background="@drawable/rounded_dialog"
	android:layout_height="wrap_content">
	<!--Head Page -->
	<RelativeLayout
		android:id="@+id/mainLayout"
		android:layout_width="match_parent"
		android:layout_height="20dp">
		<View
			android:layout_width="80dp"
			android:layout_height="4dp"
			android:layout_centerInParent="true"
			android:background="?attr/colorDivider" />
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/LiveLayout"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<LinearLayout
			android:id="@+id/llLive"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="8dp"
			android:background="@drawable/custom_ripple"
			android:orientation="vertical">
			<ImageView
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:padding="8dp"
				android:id="@+id/ivLive"
				android:background="@drawable/shape_bg_bottom_navigation"
				android:tint="@color/accent"
				android:src="@drawable/ic_live_vector" />
		</LinearLayout>
		<TextView
			android:id="@+id/LiveText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@+id/llLive"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Go_Live"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="16sp"
			android:layout_marginBottom="0dp" />
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/ImportLayout"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<LinearLayout
			android:id="@+id/llImport"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="8dp"
			android:background="@drawable/custom_ripple"
			android:orientation="vertical">
			<ImageView
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:padding="8dp"
				android:id="@+id/ivImport"
				android:background="@drawable/shape_bg_bottom_navigation"
				android:src="@drawable/ic_action_Import" />
		</LinearLayout>
		<TextView
			android:id="@+id/ImportText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@+id/llImport"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Import"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="16sp"
			android:layout_marginBottom="0dp" />
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/UploadLayout"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<LinearLayout
			android:id="@+id/llUpload"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="8dp"
			android:background="@drawable/custom_ripple"
			android:orientation="vertical">
			<ImageView
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:padding="8dp"
				android:id="@+id/ivUpload"
				android:background="@drawable/shape_bg_bottom_navigation"
				android:src="@drawable/ic_action_upload" />
		</LinearLayout>
		<TextView
			android:id="@+id/UploadText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@+id/llUpload"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Upload"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="16sp"
			android:layout_marginBottom="0dp" />
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="20dp"/>
</LinearLayout>