<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="?attr/colorPrimary"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:paddingTop="5dp">
    <LinearLayout
        android:id="@+id/mainliner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="horizontal"
        android:focusable="false">
        <RelativeLayout
            android:id="@+id/Image_container"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/Image"
                android:scaleType="centerCrop"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:focusable="false"
                android:clickable="false"
                android:src="@drawable/ImagePlacholder"
                android:focusableInTouchMode="false" />
            <TextView
                android:id="@+id/Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/textIcon"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_marginEnd="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_alignParentBottom="true"
                android:translationY="-3dp"
                android:background="@xml/rounded_corner" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="7dp"
            android:focusable="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6">
        <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Category"
                android:textSize="12sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="1dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="?attr/colorSecondaryExtra"
                android:tag="false"
                android:textAlignment="center"
                android:text="Hash"
                android:textColor="@color/textIcon" />-->
            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="1dp"
                android:lines="2"
                android:layout_marginEnd="3dp"
                android:textStyle="bold"
                android:textColor="?attr/colorSecondaryExtra"
                android:textSize="14dp" />
            <RelativeLayout
				android:id="@+id/UserItem_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/UserImageProfile"
                    android:scaleType="centerCrop"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:id="@+id/Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@id/UserImageProfile"
                    android:textColor="@color/accent"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/card_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Username"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/UserImageProfile"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:lines="1"
                android:textColor="@color/text_color_in_between"
                android:textSize="12dp"
                android:layout_marginTop="1dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="?attr/colorDivider" />
            <TextView
                android:id="@+id/View_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:lines="1"
                android:text="@string/Lbl_ReadMore"
                android:textColor="@color/accent"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>