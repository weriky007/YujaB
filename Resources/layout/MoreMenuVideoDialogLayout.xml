<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimary"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ReportLayout"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:padding="7dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ReportIcon"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="IC"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"  />
        <TextView
            android:id="@+id/ReportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_toEndOf="@+id/ReportIcon"
            android:layout_marginEnd="15dp"
            android:text="@string/Lbl_Report"
            android:gravity="start|center"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginBottom="0dp" /> 
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ReportCopyRightLayout"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:padding="7dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ReportCopyRightIcon"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="IC"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:gravity="center" 
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
             />
        <TextView
            android:id="@+id/ReportCopyRightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_toEndOf="@+id/ReportCopyRightIcon"
            android:layout_marginEnd="15dp"
            android:text="@string/Lbl_ReportCopyRight"
            android:gravity="start|center"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/QualityLayout"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
