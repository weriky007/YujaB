<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview2"
    android:layout_gravity="fill"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp"
    android:paddingTop="5dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_gravity="fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp"
            android:background="?attr/colorSecondaryExtra"
            android:paddingTop="5dp"
            app:cardElevation="0dp">
            <RelativeLayout
                android:id="@+id/Image_container"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/Imagevideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ImagePlacholder" />
                <TextView
                    android:id="@+id/videoType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/textIcon"
                    android:textSize="12dp"
                    android:visibility="invisible"
                    android:textStyle="normal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:focusable="false"
                    android:clickable="false"  
                    android:background="@drawable/ThirdpartyRoundText"
                    android:backgroundTint="#6441A4" />
                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textIcon"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:layout_marginEnd="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@xml/rounded_corner"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="7dp"
            android:focusable="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:paddingTop="5dp"
            android:paddingBottom="8dp">
            <ImageView
                android:id="@+id/Image_Channel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp" />
            <LinearLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="7dp"
                android:focusable="false"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:paddingTop="3dp">
                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:typeface="normal"
                    android:gravity="start" 
                    android:lines="1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ChannelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:lines="1"
                        android:textColor="@color/accent"
                        android:textSize="13dp"
                        android:layout_marginTop="5dp"
                        android:focusable="false"
                        android:clickable="false" />
                    <TextView
                        android:id="@+id/IconVerified" 
                        android:layout_height="wrap_content"
                        android:textColor="@color/accent"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/Views_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:lines="1"
                    android:textColor="?attr/colorSecondaryExtra"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    android:clickable="false" />
            </LinearLayout>
            <TextView
                android:id="@+id/videoMenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:lines="1"
                android:textColor="?attr/colorSecondaryExtra"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:text=":"
                android:layout_gravity="end"
                android:layout_weight="9"
                android:focusable="auto"
                android:clickable="true"
                android:gravity="center_vertical"
                android:enabled="true" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
