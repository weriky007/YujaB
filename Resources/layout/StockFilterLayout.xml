<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimary"
    android:layout_height="wrap_content">
    <!--Head Page -->
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/IconBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="&gt;"
            android:textSize="20sp"
            android:layout_marginStart="25dp" />
        <TextView
            android:id="@+id/titlepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_centerVertical="true"
            android:text="@string/Lbl_Filter"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginStart="61dp" /> 
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="?attr/colorDivider" />
    </RelativeLayout>
    <!--Search Term Section -->
    <LinearLayout
        android:id="@+id/LayoutSearchTerm"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/IconSearchTerm"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="#"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="5dp" />
        <EditText
            android:id="@+id/SearchTermEditText"
            style="@style/EditTextNormalStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/Lbl_SearchTerm"
            android:textSize="15sp"
            android:gravity="start|center"
            android:background="@drawable/EditTextStyleOne"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout> 
    <!--License Type Section -->
    <LinearLayout
        android:id="@+id/LayoutLicenseType"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/IconLicenseType"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="#"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="5dp" />
        <EditText
            android:id="@+id/LicenseTypeEditText"
            style="@style/EditTextNormalStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/Lbl_LicenseType"
            android:textSize="15sp"
            android:gravity="start|center"
            android:background="@drawable/EditTextStyleOne"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Price Section -->
    <LinearLayout
        android:id="@+id/LayoutPrice"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/IconPrice"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="#"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="5dp" />
        <EditText
            android:id="@+id/MinimumEditText"
            style="@style/EditTextNormalStyle"
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:ems="10"
            android:layout_height="45dp"
            android:background="@drawable/EditTextStyleOne"
            android:layout_alignParentEnd="true"
            android:hint="@string/Lbl_PriceMin"
            android:textSize="15sp"
            android:maxLines="1"
            android:gravity="start|center"
            android:inputType="number"
            android:layout_marginStart="3dp" />
        <EditText
            android:id="@+id/MaximumEditText"
            style="@style/EditTextNormalStyle"
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:ems="10"
            android:layout_height="45dp"
            android:background="@drawable/EditTextStyleOne"
            android:layout_alignParentEnd="true"
            android:hint="@string/Lbl_PriceMax"
            android:textSize="15sp"
            android:maxLines="1"
            android:gravity="start|center"
            android:inputType="number"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Buttons Section -->
    <RelativeLayout
        android:paddingTop="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ApplyButton"
            android:background="@drawable/follow_button_profile_friends_pressed"
            android:layout_height="36dp"
            android:layout_width="match_parent"
            android:padding="5dp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:text="@string/Lbl_ApplyFilter"
            android:textColor="@color/textIcon"
            android:textSize="12sp"
            android:clickable="true"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
</LinearLayout>